{
    "compilerOptions": {
        "allowJs": true,
        "rootDir": ".",
        "outDir": "./dist/",
        "baseUrl": "src",
        "target": "ES2019",
        "module": "es6",
        "sourceMap": true,
        "skipLibCheck": true,
        "listEmittedFiles": true,
        "noEmitOnError": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noEmitHelpers": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "cypress"]
}
